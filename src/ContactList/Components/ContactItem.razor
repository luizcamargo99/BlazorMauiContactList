<div class="contact-info">
    <div class="contact-info-content">
        <img src="images/contact.png" class="contact-icon" />
        <div class="info-name">
            <span>@(Contact.Name)</span>
            <div>
                <i class="oi oi-phone"></i>
                <span>@(Contact.Phone)</span>
            </div>
        </div>
    </div>

    <div class="button-group">
        <IconButton OnClick='() => { navigation.NavigateTo($"/AddContactInfo/{Contact.Id}"); }' IconClass="oi oi-pencil" BackgroundColor="#dbb900"></IconButton>
        <IconButton OnClick="async() => { await DeleteAsync(); }" IconClass="oi oi-trash" BackgroundColor="#ff4343"></IconButton>
    </div>

</div>

@code {
    [Parameter]
    public ContactInfo Contact { get; set; }

    private async Task DeleteAsync()
    {
        await contactRepository.Delete(Contact.Id.Value);
        navigation.NavigateTo("/", true);
    }
}